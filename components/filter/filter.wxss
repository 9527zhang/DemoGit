.flex {
    display: flex;
    align-items: center;
}

.box {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    flex-direction: column;
}

.empty-box {
    flex: 1;
    background-color: transparent;
}

/* 内容视图 */

.content {
    width: 100vw;
    background: rgba(255, 255, 255, 1);
    opacity: 1;
    border-radius: 16rpx 16rpx 0px 0px;
    z-index: 1001;
}

.box_type {
    font-size: 30rpx;
    color: #333333;
    font-weight: bold;
    margin: 52rpx 0 0 40rpx;
}

.box_title.normal {
    font-size: 28rpx;
    color: #333333;
    font-weight: 500;
    text-align: center;
}

.box_title.active {
    font-size: 28rpx;
    color: #FFFFFF;
    font-weight: 500;
    text-align: center;
}


.chooseQuesType {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    margin-top: 24rpx;
}

.choose_item.normal {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    width: 200rpx;
    height: 128rpx;
    border-radius: 10rpx;
    background-color: #FFFFFF;
    box-shadow: 0px 4px 14px 0px rgba(114, 122, 128, 0.15);
}

.choose_item.active {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    width: 200rpx;
    height: 128rpx;
    border-radius: 10rpx;
    background-color: #229BFE;
    box-shadow: 0px 4px 14px 0px rgba(34, 155, 254, 0.15);
}

.choose_item_img {
    width: 40rpx;
    height: 40rpx;
}

.degreeOfDiff {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    margin-top: 20rpx;
}

.degree_item.normal {
    width: 144rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
    background-color: #FFFFFF;
    box-shadow: 0px 4px 14px 0px rgba(114, 122, 128, 0.2);
}

.degree_item.active {
    width: 144rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
    background-color: #229BFE;
    box-shadow: 0px 4px 14px 0px rgba(34, 155, 254, 0.15);
}

.action_part {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    margin-top: 54rpx;
}

.reset_part {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    width: 80rpx;
    height: 80rpx;
}

.reset_img {
    width: 44rpx;
    height: 44rpx;
}

.reset_title {
    font-size: 26rpx;
    color: #333333;
    font-weight: 500;
}

.start_part {
    width: 560rpx;
    height: 80rpx;
}

.start_button {
    width: 100%;
    height: 100%;
    background-color: #229BFE;
    box-shadow: 0px 4rpx 14rpx 0px rgba(34, 155, 254, 0.2);
    border-radius: 14rpx;
    font-size: 32rpx;
    color: white;
    font-weight: bold;
}

.start_button::after {
    border: 0;
}