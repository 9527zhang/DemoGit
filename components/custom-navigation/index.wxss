.nav {
  width: 100%;
}

.nav_bar {
  position: fixed;
  top: 0;
  z-index: 999;
  width: 100%;
  background-color: #fff;
}

.nav_items {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 44px;
}

.back {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  margin-left: 8px;
}

.back .back_img {
  width: 22px;
  height: 22px;
}

.search_input {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 400rpx;
  height: 64rpx;
  margin-left: 40rpx;
  background-color: #f5f7fa;
  border-radius: 32rpx;
}

.search_img {
  width: 30rpx;
  height: 30rpx;
  margin-left: 22rpx;
}

.search_title {
  color: #999;
  font-weight: 400;
  font-size: 24rpx;
}

.input {
  flex: 1;
  padding: 0 20rpx;
  color: #333;
  font-weight: 400;
  font-size: 24rpx;
}
