<wxs src="navigation.wxs" module="nav">
</wxs>
<view style="padding-top:{{content_offset ? bar_Height + 44 : 0}}px;">
	<view class='navigation status-bar'>
		<view class='goBack' bindtap='goBack' style="padding-top:{{bar_Height}}px;" hidden='{{!show_bol}}'>
			<!-- 返回按钮 -->
			<image class="back" src='back.png' mode="AspectFit"></image>
		</view>
		<view class="tabar {{my_class ? 'tabar2':''}} {{is_center ? '' : 'tabar_l'}}" style="padding-top:{{bar_Height}}px; background-color:{{background_color}}; {{nav.linearGradient(linear_gradient, direction, color_stops)}}">
			<text class="txt" style="color:{{title_color}};">{{title}}</text> <!-- 标题 -->
		</view>
	</view>
</view>