.bg_box {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(49,49,49,0.4);
    display: flex;
    align-items: center;
    justify-content: center;
}

.info_window {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 510rpx;
    height: 520rpx;
    background-color: white;
    border-radius: 10rpx;
}

.info_title {
    font-size: 34rpx;
    color: #333333;
    font-weight: bold;
    margin-top: 40rpx;
}

.circle_box,.circle_draw{ position: relative; }
.circle_bg{position: absolute;}

.circle_box{
    margin-top: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  
.circle_content {
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.circle_txt {
    font-size: 22rpx;
    color: #999999;
    font-weight: 500;
}

.circle_sub {
    font-size: 28rpx;
    color: #229BFE;
    font-weight: bold;
}

.info_text {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-top: 24rpx;
}
  
.info_text_l {
    font-size: 28rpx;
    color: #666666;
    font-weight: 500;
}
  
.info_text_c {
    font-size: 28rpx;
    color: #229BFE;
    font-weight: 500;
}

.action_part {
    margin-top: 50rpx;
    width: 100%;
    height: 64rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
  
.continuePractice {
    width: 190rpx;
    height: 100%;
    background-color: white;
    /* box-shadow: 0px 4rpx 14rpx 0px rgba(34,155,254,0.2); */
    border: 1rpx solid #229BFE;
    border-radius: 8rpx;
    font-size: 26rpx;
    color: #229BFE;
    font-weight: 500;
    padding: 0;
    margin: 0;
}

.continuePractice::after {
    border: 0;
}
  
.exitPractice {
    width: 190rpx;
    height: 100%;
    background-color: #229BFE;
    box-shadow:0px 4px 14px 0px rgba(34,155,254,0.2);
    border-radius: 8rpx;
    font-size: 26rpx;
    color: white;
    font-weight: 500;
    padding: 0;
    margin: 0;
    margin-left: 34rpx;
}

.exitPractice::after {
    border: 0;
}