<view class="bg_box" hidden="{{!hideModal}}" catchtouchmove="preventTouchMove">
    <view class="info_window">
        <text class="info_title">{{title}}</text>
        <view class="circle_box" style="width:{{size}}px;height:{{size}}px">
            <canvas class="circle_bg" canvas-id="{{draw}}bg" style="width:{{size}}px;height:{{size}}px"></canvas> 
            <canvas class="circle_draw" canvas-id="{{draw}}" style="width:{{size}}px;height:{{size}}px"></canvas> 
            <view class="circle_content">
                <text class="circle_txt">当前进度</text>
                <text class="circle_sub">{{finished}}/{{total}}</text>
            </view>
        </view>
        <view class="info_text" wx:if="{{custom}}">
            <text class="info_text_l">您还有</text>
            <text class="info_text_c">{{total-finished}}</text>
            <text class="info_text_l">题未做，{{action3==1?'交卷':'退出'}}后将重置</text>
        </view>
        <view class="info_text" wx:else>
            <text class="info_text_l">{{sub_title}}</text>
        </view>
        <view class="action_part">
            <button class="continuePractice" bindtap="continuePractice">{{action1}}</button>
            <button class="exitPractice" bindtap="exitPractice">{{action2}}</button>
        </view>
    </view>
</view>